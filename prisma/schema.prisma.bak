generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id    String   @id @default(cuid())
  name  RoleName @unique
  users User[]

  @@map("roles")
}

model User {
  firebaseUid  String   @id
  employeeId   String?  @unique @map("employee_id") // Custom ID: EMP001, ADV001, etc.
  name         String
  email        String   @unique
  roleId       String
  dealershipId String?  @map("dealership_id") // Multi-dealership support
  managerId    String?  @map("manager_id")
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // FCM Notification fields
  fcmToken         String?   @map("fcm_token")
  deviceType       String?   @map("device_type") // 'android' or 'ios'
  lastTokenUpdated DateTime? @map("last_token_updated")

  // Relations
  auditLogs         BookingAuditLog[] @relation("AuditLogs")
  adminImports      BookingImport[]   @relation("AdminImports")
  advisorBookings   Booking[]         @relation("AdvisorBookings")
  assignedEnquiries Enquiry[]         @relation("AssignedTo")
  createdEnquiries  Enquiry[]         @relation("CreatedBy")
  notificationLogs  NotificationLog[] @relation("NotificationLogs")
  remarks           Remark[]          @relation("RemarkAuthor")
  cancelledRemarks  Remark[]          @relation("RemarkCanceller")
  enquiryImports    EnquiryImport[]   @relation("EnquiryAdminImports")
  role              Role              @relation(fields: [roleId], references: [id])
  dealership        Dealership?       @relation(fields: [dealershipId], references: [id])
  manager           User?             @relation("ManagerSubordinates", fields: [managerId], references: [firebaseUid], onDelete: SetNull)
  subordinates      User[]            @relation("ManagerSubordinates")

  @@map("users")
}

model Enquiry {
  id                  String          @id @default(cuid())
  status              EnquiryStatus   @default(OPEN)
  category            EnquiryCategory @default(HOT)
  assignedToUserId    String?
  createdByUserId     String
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  caRemarks           String?         @map("ca_remarks")
  color               String?
  customerContact     String          @map("customer_contact")
  customerEmail       String?         @map("customer_email")
  customerName        String          @map("customer_name")
  expectedBookingDate DateTime?       @map("expected_booking_date")
  model               String?
  source              EnquirySource   @default(WALK_IN)
  variant             String?
  dealerCode          String?         @map("dealer_code")
  location            String?
  dealershipId        String?         @map("dealership_id") // Multi-tenant dealership

  // Follow-up tracking fields
  lastFollowUpDate DateTime? @map("last_follow_up_date")
  followUpCount    Int       @default(0) @map("follow_up_count")
  nextFollowUpDate DateTime? @map("next_follow_up_date")

  // Relations
  bookings      Booking[]
  remarkHistory Remark[]
  assignedTo    User?       @relation("AssignedTo", fields: [assignedToUserId], references: [firebaseUid])
  createdBy     User        @relation("CreatedBy", fields: [createdByUserId], references: [firebaseUid])
  dealership    Dealership? @relation("DealershipEnquiries", fields: [dealershipId], references: [id])
  quotations    Quotation[]

  @@map("enquiries")
}

model Booking {
  id                    String             @id @default(cuid())
  customerName          String             @map("customer_name")
  status                BookingStatus      @default(PENDING)
  enquiryId             String?            @map("enquiry_id")
  createdAt             DateTime           @default(now()) @map("created_at")
  updatedAt             DateTime           @updatedAt @map("updated_at")
  customerPhone         String?            @map("customer_phone")
  customerEmail         String?            @map("customer_email")
  dealerId              String?            @map("dealer_id")
  advisorId             String?            @map("advisor_id")
  bookingDate           DateTime?          @map("booking_date")
  source                BookingSource      @default(MANUAL)
  metadata              Json?
  zone                  String?
  region                String?
  optyId                String?            @unique @map("opty_id")
  variant               String?
  vcCode                String?            @map("vc_code")
  color                 String?
  fuelType              String?            @map("fuel_type")
  transmission          String?
  expectedDeliveryDate  DateTime?          @map("expected_delivery_date")
  division              String?
  empName               String?            @map("emp_name")
  employeeLogin         String?            @map("employee_login")
  financeRequired       Boolean?           @map("finance_required")
  financerName          String?            @map("financer_name")
  fileLoginDate         DateTime?          @map("file_login_date")
  approvalDate          DateTime?          @map("approval_date")
  stockAvailability     StockAvailability? @map("stock_availability")
  chassisNumber         String?            @map("chassis_number")
  allocationOrderNumber String?            @map("allocation_order_number")
  rtoDate               DateTime?          @map("rto_date")
  vahanDate             DateTime?          @map("vahan_date") // Vahan registration date

  // Role-specific remarks fields
  remarks               String? // Legacy/general remarks
  advisorRemarks        String? @map("advisor_remarks") // Customer Advisor remarks
  teamLeadRemarks       String? @map("team_lead_remarks") // Team Lead remarks
  salesManagerRemarks   String? @map("sales_manager_remarks") // Sales Manager remarks
  generalManagerRemarks String? @map("general_manager_remarks") // General Manager remarks
  adminRemarks          String? @map("admin_remarks") // Admin remarks

  dealerCode   String  @map("dealer_code")
  dealershipId String? @map("dealership_id") // Multi-tenant dealership

  // Follow-up tracking fields
  lastFollowUpDate DateTime? @map("last_follow_up_date")
  followUpCount    Int       @default(0) @map("follow_up_count")
  nextFollowUpDate DateTime? @map("next_follow_up_date")

  // Relations
  auditLogs     BookingAuditLog[]
  remarkHistory Remark[]
  advisor       User?             @relation("AdvisorBookings", fields: [advisorId], references: [firebaseUid])
  dealer        Dealer?           @relation(fields: [dealerId], references: [id])
  dealership    Dealership?       @relation("DealershipBookings", fields: [dealershipId], references: [id])
  enquiry       Enquiry?          @relation(fields: [enquiryId], references: [id])

  @@map("bookings")
}

model Dealer {
  id         String    @id @default(cuid())
  dealerCode String    @unique @map("dealer_code")
  dealerName String    @map("dealer_name")
  location   String?
  isActive   Boolean   @default(true) @map("is_active")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  zone       String?
  region     String?
  dealerType String?   @map("dealer_type")
  bookings   Booking[]
  vehicles   Vehicle[]

  @@map("dealers")
}

// Multi-Dealership System Model
model Dealership {
  id                  String         @id @default(cuid())
  name                String
  code                String         @unique
  type                DealershipType
  email               String
  phone               String
  address             String
  city                String
  state               String
  pincode             String
  gstNumber           String?        @map("gst_number")
  panNumber           String?        @map("pan_number")
  brands              String[]       @default([])
  isActive            Boolean        @default(true) @map("is_active")
  onboardingCompleted Boolean        @default(false) @map("onboarding_completed")
  createdAt           DateTime       @default(now()) @map("created_at")
  updatedAt           DateTime       @updatedAt @map("updated_at")

  // Relations
  users           User[]
  vehicleCatalogs VehicleCatalog[]
  bookings        Booking[]        @relation("DealershipBookings")
  enquiries       Enquiry[]        @relation("DealershipEnquiries")
  quotations      Quotation[]      @relation("DealershipQuotations")
  vehicles        Vehicle[]        @relation("DealershipVehicles")

  @@map("dealerships")
}

// Vehicle Catalog Model
model VehicleCatalog {
  id           String     @id @default(cuid())
  dealershipId String     @map("dealership_id")
  brand        String
  model        String
  variants     Json // Store variants as JSON
  isActive     Boolean    @default(true) @map("is_active")
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")
  dealership   Dealership @relation(fields: [dealershipId], references: [id], onDelete: Cascade)

  @@unique([dealershipId, brand, model])
  @@map("vehicle_catalogs")
}

model BookingImport {
  id               String               @id @default(cuid())
  adminId          String               @map("admin_id")
  filename         String
  originalFilename String?              @map("original_filename")
  fileSize         BigInt?              @map("file_size")
  totalRows        Int                  @default(0) @map("total_rows")
  processedRows    Int                  @default(0) @map("processed_rows")
  successfulRows   Int                  @default(0) @map("successful_rows")
  failedRows       Int                  @default(0) @map("failed_rows")
  status           ImportStatus         @default(PENDING)
  importSettings   Json?                @map("import_settings")
  errorSummary     Json?                @map("error_summary")
  startedAt        DateTime?            @map("started_at")
  completedAt      DateTime?            @map("completed_at")
  createdAt        DateTime             @default(now()) @map("created_at")
  updatedAt        DateTime             @updatedAt @map("updated_at")
  errors           BookingImportError[]
  admin            User                 @relation("AdminImports", fields: [adminId], references: [firebaseUid])

  @@map("booking_imports")
}

model BookingImportError {
  id           String        @id @default(cuid())
  importId     String        @map("import_id")
  rowNumber    Int           @map("row_number")
  rawRow       Json          @map("raw_row")
  errorMessage String        @map("error_message")
  errorType    String?       @map("error_type")
  fieldErrors  Json?         @map("field_errors")
  createdAt    DateTime      @default(now()) @map("created_at")
  import       BookingImport @relation(fields: [importId], references: [id], onDelete: Cascade)

  @@map("booking_import_errors")
}

model EnquiryImport {
  id               String               @id @default(cuid())
  adminId          String               @map("admin_id")
  filename         String
  originalFilename String?              @map("original_filename")
  fileSize         BigInt?              @map("file_size")
  totalRows        Int                  @default(0) @map("total_rows")
  processedRows    Int                  @default(0) @map("processed_rows")
  successfulRows   Int                  @default(0) @map("successful_rows")
  failedRows       Int                  @default(0) @map("failed_rows")
  status           ImportStatus         @default(PENDING)
  importSettings   Json?                @map("import_settings")
  errorSummary     Json?                @map("error_summary")
  startedAt        DateTime?            @map("started_at")
  completedAt      DateTime?            @map("completed_at")
  createdAt        DateTime             @default(now()) @map("created_at")
  updatedAt        DateTime             @updatedAt @map("updated_at")
  errors           EnquiryImportError[]
  admin            User                 @relation("EnquiryAdminImports", fields: [adminId], references: [firebaseUid])

  @@map("enquiry_imports")
}

model EnquiryImportError {
  id           String        @id @default(cuid())
  importId     String        @map("import_id")
  rowNumber    Int           @map("row_number")
  rawRow       Json          @map("raw_row")
  errorMessage String        @map("error_message")
  errorType    String?       @map("error_type")
  fieldErrors  Json?         @map("field_errors")
  createdAt    DateTime      @default(now()) @map("created_at")
  import       EnquiryImport @relation(fields: [importId], references: [id], onDelete: Cascade)

  @@map("enquiry_import_errors")
}

model BookingAuditLog {
  id           String   @id @default(cuid())
  bookingId    String   @map("booking_id")
  changedBy    String   @map("changed_by")
  action       String
  oldValue     Json?    @map("old_value")
  newValue     Json?    @map("new_value")
  changeReason String?  @map("change_reason")
  ipAddress    String?  @map("ip_address")
  userAgent    String?  @map("user_agent")
  createdAt    DateTime @default(now()) @map("created_at")
  booking      Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  user         User     @relation("AuditLogs", fields: [changedBy], references: [firebaseUid])

  @@map("booking_audit_logs")
}

model Quotation {
  id           String          @id @default(cuid())
  enquiryId    String
  amount       Float
  status       QuotationStatus @default(PENDING)
  pdfUrl       String?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  dealershipId String?         @map("dealership_id") // Multi-tenant dealership
  enquiry      Enquiry         @relation(fields: [enquiryId], references: [id], onDelete: Cascade)
  dealership   Dealership?     @relation("DealershipQuotations", fields: [dealershipId], references: [id])

  @@map("quotations")
}

model Model {
  id          String    @id @default(cuid())
  brand       String // "Tata", "Honda", "Maruti"
  modelName   String    @map("model_name") // "Nexon", "Harrier", "Safari"
  segment     String? // "SUV", "Sedan", "Hatchback"
  description String?
  basePrice   Float?    @map("base_price")
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  vehicles    Vehicle[]

  @@unique([brand, modelName])
  @@map("models")
}

model Vehicle {
  id                  String      @id @default(cuid())
  activeVC            String?     @unique @map("active_vc")
  vcCode              String?     @map("vc_code")
  variant             String? // "Nexon XZ+ Petrol AT"
  trim                String? // "XZ+", "XM", "XZ+ Lux"
  color               String?
  fuelType            String?     @map("fuel_type")
  transmission        String?
  modelId             String?     @map("model_id") // Link to Model master
  zawlStock           Int         @default(0) @map("zawl_stock") // Stock quantity
  rasStock            Int         @default(0) @map("ras_stock") // Stock quantity
  regionalStock       Int         @default(0) @map("regional_stock") // Stock quantity
  plantStock          Int         @default(0) @map("plant_stock") // Stock quantity
  totalStock          Int         @default(0) @map("total_stock") // Auto-computed total
  ppl                 String?
  dealerId            String?     @map("dealer_id")
  dealerType          String?     @map("dealer_type")
  exShowroomPrice     Float?      @map("ex_showroom_price")
  consumerDiscount    Float?      @map("consumer_discount")
  greenBonus          Float?      @map("green_bonus")
  existingICEDiscount Float?      @map("existing_ice_discount")
  existingEVDiscount  Float?      @map("existing_ev_discount")
  intervention        Float?
  exchangeScrappage   Float?      @map("exchange_scrappage")
  corporateDiscount   Float?      @map("corporate_discount")
  ruralGovtDiscount   Float?      @map("rural_govt_discount")
  additionalDiscount  Float?      @map("additional_discount")
  finalBillingPrice   Float?      @map("final_billing_price")
  insurance75         Float?      @map("insurance_75")
  byDealer            Float?      @map("by_dealer")
  selfCost            Float?      @map("self_cost")
  normalRTO           Float?      @map("normal_rto")
  trc                 Float?
  bh                  Float?
  tcs                 Float?      @map("tcs_1_percent")
  fastag              Float?
  onRoadPrice         Float?      @map("on_road_price")
  isActive            Boolean     @default(true) @map("is_active")
  createdAt           DateTime    @default(now()) @map("created_at")
  updatedAt           DateTime    @updatedAt @map("updated_at")
  dealershipId        String?     @map("dealership_id") // Multi-tenant dealership
  dealer              Dealer?     @relation(fields: [dealerId], references: [id])
  dealership          Dealership? @relation("DealershipVehicles", fields: [dealershipId], references: [id])
  model               Model?      @relation(fields: [modelId], references: [id])

  @@map("vehicles")
}

enum RoleName {
  ADMIN
  GENERAL_MANAGER
  SALES_MANAGER
  TEAM_LEAD
  CUSTOMER_ADVISOR
}

enum EnquiryStatus {
  OPEN
  IN_PROGRESS
  CLOSED
}

enum EnquiryCategory {
  HOT // High priority, likely to convert
  LOST // Customer lost/not interested
  BOOKED // Converted to booking
}

enum BookingStatus {
  PENDING
  ASSIGNED
  IN_PROGRESS
  CONFIRMED
  DELIVERED
  CANCELLED
  NO_SHOW
  WAITLISTED
  RESCHEDULED
  BACK_ORDER
  APPROVED
  REJECTED
}

enum ImportStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum BookingSource {
  MANUAL
  BULK_IMPORT
  API
  MOBILE
}

enum EnquirySource {
  WALK_IN
  PHONE_CALL
  WEBSITE
  DIGITAL
  SOCIAL_MEDIA
  REFERRAL
  ADVERTISEMENT
  EMAIL
  SHOWROOM_VISIT
  EVENT
  BTL_ACTIVITY
  WHATSAPP
  OUTBOUND_CALL
  OTHER
}

enum QuotationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum StockAvailability {
  VNA // Vehicle Not Available
  VEHICLE_AVAILABLE // Vehicle Available
}

enum DealershipType {
  TATA
  UNIVERSAL
  MAHINDRA
  HYUNDAI
  MARUTI
  OTHER
}

// Notification tracking model
model NotificationLog {
  id        String   @id @default(cuid())
  userId    String
  title     String
  body      String
  type      String // 'enquiry_followup', 'booking_followup', etc.
  entityId  String? // enquiry ID or booking ID
  sentAt    DateTime @default(now())
  delivered Boolean  @default(false)
  user      User     @relation("NotificationLogs", fields: [userId], references: [firebaseUid])

  @@map("notification_logs")
}

model Remark {
  id                 String    @id @default(cuid())
  entityType         String // 'enquiry' or 'booking'
  entityId           String // ID of enquiry or booking
  remark             String // The actual remark text
  remarkType         String // 'status_update', 'follow_up', 'escalation', 'ca_remarks', 'tl_remarks', etc.
  createdBy          String // User ID who created the remark
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  isCancelled        Boolean   @default(false) @map("is_cancelled")
  cancellationReason String?   @map("cancellation_reason")
  cancelledAt        DateTime? @map("cancelled_at")
  cancelledBy        String?   @map("cancelled_by")

  // Relations
  user            User     @relation("RemarkAuthor", fields: [createdBy], references: [firebaseUid])
  cancelledByUser User?    @relation("RemarkCanceller", fields: [cancelledBy], references: [firebaseUid])
  // ‚ö†Ô∏è CRITICAL: DO NOT add explicit  // Prisma Studio fails with "Unable to process count query" fatal error when you have:
  // - Both Enquiry? and Booking? relations with explicit foreign keys
  // - This is because Prisma doesn't support polymorphic relations with explicit FKs
  //
  // ‚úÖ Polymorphic relations are handled via entityType + entityId fields ONLY:
  //    - entityType: 'enquiry' or 'booking'
  //    - entityId: the ID of the enquiry or booking
  //    - Application code queries: WHERE entityType = 'enquiry' AND entityId = '...'
  //
  // ‚úÖ The remarkHistory relations in  //    - Enquiry.remarkHistory queries: WHERE entityType = 'enquiry' AND entityId = enquiry.id
  //    - Booking.remarkHistory queries: WHERE entityType = 'booking' AND entityId = booking.id
  //
  // ‚ö†Ô∏è‚ö†Ô∏è‚ö†Ô∏è DO NOT ADD THESE LINES BACK - THEY BREAK PRISMA STUDIO ‚ö†Ô∏è‚ö†Ô∏è‚ö†Ô∏è
  // If you add these relations, Prisma Studio will crash with:
  // "Fatal Error: Unable to process count query"
  //
  // The polymorphic approach (entityType + entityId) works perfectly!
  // Relations are handled in application code using WHERE clauses.
  // See: REMARK_RELATIONS_WARNING.md for details
  //
  // üö®üö®üö® CRITICAL: DO NOT ADD THESE RELATIONS BACK! üö®üö®üö®
  // They will break Prisma Studio with "Unable to process count query" error!
  // Prisma does NOT support polymorphic relations with explicit foreign keys to multiple tables.
  // Use ONLY entityType + entityId for polymorphic relations!
  @@index([entityType, entityId])
  @@index([createdBy])
  @@index([createdAt])
  @@map("remarks")
}
