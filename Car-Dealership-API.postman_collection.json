    {
      "name": "üîê Authentication",
      "item": [
        {
          "name": "üöÄ Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Auto-save token from login response",
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.token) {",
                  "        pm.environment.set('authToken', response.data.token);",
                  "        pm.environment.set('currentUser', JSON.stringify(response.data.user));",
                  "        console.log('‚úÖ Login successful! Token saved to environment.');",
                  "        console.log('User:', response.data.user.name, '(' + response.data.user.role.name + ')');",
                  "    }",
                  "} else {",
                  "    console.log('‚ùå Login failed');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@cardealership.com\",\n  \"password\": \"Admin123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
